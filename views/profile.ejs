<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen font-sans">
  <div class="max-w-4xl mx-auto px-6 py-10">
    
    <!-- Top Bar -->
    <div class="flex justify-between items-center mb-8">
  
      <h3 class=" pt-5 text-3xl font-semibold">Hello, <span class="text-blue-400"><%= user.username %></span></h3>
      <a href="/logout" class=" fixed top-4 right-7  bg-red-500 hover:bg-red-600 transition px-5 py-2 rounded-md text-sm font-semibold shadow">LOGOUT</a>
    </div>

    <!-- Create Post -->
    <div class="mb-10">
      <h5 class="text-lg mb-2 text-gray-300">Create a new post</h5>
      <form method="post" action="/post" class="space-y-4">
        <textarea name="content" rows="4" placeholder="What's on your mind?" 
          class="w-full bg-zinc-800 border border-zinc-700 rounded-lg p-4 text-sm focus:ring-2 focus:ring-blue-500 outline-none resize-none"></textarea>
        <input type="submit" value="Create Post" 
          class="bg-blue-600 hover:bg-blue-700 transition w-full sm:w-40 py-2 rounded-md text-white font-semibold cursor-pointer shadow"/>
      </form>
    </div>

    <!-- Posts -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold mb-6">Your Posts</h3>
      <div class="space-y-6">
        <% user.posts.reverse().forEach(function(post) { %>
          <div class="bg-zinc-800 border border-zinc-700 rounded-lg p-5 shadow-md">
            <h4 class="text-blue-400 font-semibold mb-2">@<%= user.username %></h4>
            <p class="text-sm text-gray-300 tracking-tight mb-4"><%= post.content %></p>
            <div class="flex items-center gap-6 text-sm">
              <a href="#" class="text-blue-500 hover:underline">Like</a>
              <a href="#" class="text-yellow-400 hover:underline">Edit</a>
              <form method="POST" action="/post/delete/<%= post._id %>" class="inline-block">
                <button type="submit" class="text-red-400 hover:text-red-500 hover:underline">Delete</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

  </div>
</body>
</html>
